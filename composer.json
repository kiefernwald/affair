{
  "name": "kiefernwald/affair",
  "type": "library",
  "description": "A library to allow handling of events.",
  "keywords": [
    "events",
    "date",
    "affair"
  ],
  "homepage": "http://github.com/kiefernwald/affair",
  "support": {
    "issues": "https://github.com/kiefernwald/affair/issues"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Thomas Bretzke",
      "homepage": "https://kiefernwald.net/",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.1",
    "nesbot/carbon": "^1.33"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.5",
    "squizlabs/php_codesniffer": "^3.2"
  },
  "autoload": {
    "psr-4": {
      "Kiefernwald\\Affair\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Kiefernwald\\Affair\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "archive": {
    "exclude": [
      "/tests/",
      ".editorconfig",
      ".gitattributes",
      ".gitignore",
      ".travis.yml",
      "phpcs.xml",
      "phpunit.xml"
    ]
  },
  "scripts": {
    "test": [
      "vendor/bin/phpcs",
      "vendor/bin/phpunit"
    ],
    "autostyle": "vendor/bin/phpcbf"
  }
}
